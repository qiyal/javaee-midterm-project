<web-app>
<!--  BaseServlet  -->
    <servlet>
        <servlet-name>baseServlet</servlet-name>
        <servlet-class>kz.iitu.javaee.BaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>baseServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

<!--  LoginServlet  -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>kz.iitu.javaee.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


<!--  MainServlet  -->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>kz.iitu.javaee.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>


<!--  RegistrationServlet  -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>kz.iitu.javaee.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

<!--  LogoutServlet  -->
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>kz.iitu.javaee.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>

<!--  BookServlet  -->
    <servlet>
        <servlet-name>bookServlet</servlet-name>
        <servlet-class>kz.iitu.javaee.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookServlet</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>



    <!--  Filters  -->
    <filter>
        <filter-name>sessionValidationFilter</filter-name>
        <filter-class>kz.iitu.javaee.filters.SessionValidationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sessionValidationFilter</filter-name>
        <url-pattern>/main</url-pattern>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>kz.iitu.javaee.filters.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/registration</url-pattern>
    </filter-mapping>


</web-app>
